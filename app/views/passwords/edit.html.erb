<% @title = "パスワード変更" %>
<% provide(:button_text, "更新する") %>

<div class="container d-flex justify-content-center">
  <%= render "shared/sidebar_left" %>
  <div class="task__main-col">
    <div class="page__title-box">
      <h2 class="page__title"><%= @title %></h2>
    </div>
    <%= form_with(model: @change_password_form, url: :user_password, method: :patch, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group row">
        <label for="inputBody" class="col-sm-4 col-form-label">現在のパスワード</label>
        <div class="col-sm-8">
          <%= f.password_field :current_password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputBody" class="col-sm-4 col-form-label">新しいパスワード</label>
        <div class="col-sm-8">
          <%= f.password_field :new_password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputBody" class="col-sm-4 col-form-label">新しいパスワード(確認)</label>
        <div class="col-sm-8">
          <%= f.password_field :new_password_confirmation, class: "form-control" %>
        </div>
      </div>

      <div class="action__case">
        <%= f.submit yield(:button_text), class: "btn btn-primary action__btn" %>
      </div>
    <% end %>
  </div>
  <%= render "shared/sidebar_right" %>
</div>