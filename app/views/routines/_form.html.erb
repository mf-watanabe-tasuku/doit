<%= form_with(model: @routine, local: true) do |f| %>
  <div class="form-group row">
    <div class="col-sm-12">
      <%= f.label :title, class: "col-form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "タイトル" %>
      <%= error_message(@routine, :title) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-6">
      <%= f.label :start_date, class: "col-form-label" %>
      <%= f.date_field(:start_date, default: @routine.start_date, value: @routine.start_date, class: "form-control") %>
      <%= error_message(@routine, :start_date) %>
    </div>
    <div class="col-sm-6">
      <%= f.label :end_date, class: "col-form-label" %>
      <%= f.date_field(:end_date, default: @routine.end_date, value: @routine.end_date, class: "form-control") %>
      <%= error_message(@routine, :end_date) %>
    </div>
  </div>
  <div class="text-center">
    <%= f.submit yield(:button_text), class: "btn btn-info mt-4" %>
  </div>
<% end %>