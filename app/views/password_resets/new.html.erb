<div class="container">
  <div class="login__case">
      <div class="page__title-box">
        <h2 class="page__title"><%= @title %></h2>
      </div>
      <div class="login__form">
        <%= form_with(scope: :password_reset, url: password_resets_path,local: true, html: { novalidate: true }) do |f| %>
          <div class="form-group row">
            <div class="col-sm-12">
              <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
            </div>
          </div>
          <div class="action__case">
            <%= f.submit "再設定用のメールを発行", class: "btn btn-primary action__btn" %>
          </div>
        <% end %>
      </div>
  </div>
</div>