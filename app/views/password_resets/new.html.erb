<% @title = "ログイン" %>

<div class="container">
  <div class="login__case">
      <div class="page__title-box">
        <h2 class="page__title"><%= @title %></h2>
      </div>
      <div class="login__form">
        <%= form_with(scope: :password_reset, url: password_resets_path,local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :email, class: "col-sm-4 col-form-label" %>
            <div class="col-sm-8">
              <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>
          <div class="action__case">
            <%= f.submit "パスワード再設定", class: "btn btn-primary action__btn" %>
          </div>
        <% end %>
      </div>
  </div>
</div>