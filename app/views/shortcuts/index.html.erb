<% @title = "ショートカット一覧" %>

<div class="container d-flex justify-content-between">
  <%= render "shared/sidebar_left" %>
    <div class="todo__main-col todo__main-col--index">
      <div>
        <div class="page__title-box">
          <h2 class="page__title"><%= @title %></h2>
        </div>
        <% if @shortcuts.any? %>
          <ul class="todo__list">
          <% @shortcuts.each do |shortcut| %>
            <%= render shortcut %>
          <% end %>
          </ul>
        <% else %>
          <p class="todo__no-item">ショートカットはまだ作成されていません。</p>
        <% end %>
        <div class="todo__btn-case">
          <%= link_to "ショートカットを追加", new_shortcut_path, class: "float-right btn btn-info btn-sm #{@disabled}" %>
        </div>
      </div>
    </div>
  <%= render "shared/sidebar_right" %>
</div>