<% @title = get_url_date + "のToDo" %>

<div class="container d-flex justify-content-center">
  <%= render "sidebar_left" %>
    <div class="task__main-col task__main-col--index">
      <div>
        <div class="page__title-box">
          <div>
            <% unless set_previous_date < Date.parse("2020-09-01") %>
              <%= link_to "<<", index_path(set_previous_date), class: "btn btn-outline-dark btn-sm" %>
            <% end %>
          </div>
          <h2 class="page__title"><%= @title %></h2>
          <div>
            <% unless set_next_date > 1.year.since(@today.to_date + 1.day) %>
              <%= link_to ">>", index_path(set_next_date), class: "btn btn-outline-dark btn-sm" %>
            <% end %>
          </div>
        </div>
        <% if @date_tasks.any? %>
          <ul class="task__list">
          <% @tasks.each do |task| %>
            <%= render task %>
          <% end %>
          </ul>
        <% else %>
          <p class="text-center">ToDoがありません</p>
        <% end %>
      </div>
      <div class="task__btn-case">
        <%= link_to "ToDoを追加", new_task_path, class: "btn btn-outline-success mr-3 btn-sm" %>
        <%= link_to "今日へ移動", index_path(@today), class: "btn btn-outline-primary btn-sm" %>
      </div>
    </div>
  <%= render "sidebar_right" %>
</div>