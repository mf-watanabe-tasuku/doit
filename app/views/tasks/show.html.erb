<div class="container d-flex justify-content-center">
  <%= render "sidebar_left" %>
    <div class="task__main-col">
      <div class="page__title-box">
        <h2 class="page__title"><%= @task.title %></h2>
      </div>
      <div class="form-group row">
        <label for="inputTitle" class="col-sm-4 col-form-label">タイトル</label>
        <div class="col-sm-8">
          <%= @task.title %>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputBody" class="col-sm-4 col-form-label">メモ</label>
        <div class="col-sm-8">
          <%= @task.body if @task.body %>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputBody" class="col-sm-4 col-form-label">ステータス</label>
        <div class="col-sm-8">
          <%= @task.status if @task.status %>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputBody" class="col-sm-4 col-form-label">期限</label>
        <div class="col-sm-8">
          <%= @task.limit_at if @task.limit_at %>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputBody" class="col-sm-4 col-form-label">日付</label>
        <div class="col-sm-8">
          <%= @task.date_id if @task.date_id %>
        </div>
      </div>
      <div class="task__btn-case">
        <p><%= link_to "編集", [ :edit, @task ], class: "btn btn-outline-warning mr-3 btn-sm" %></p>
        <p><%= link_to "削除", @task, method: :delete, class: "btn btn-outline-danger btn-sm", data: { confirm: "本当に削除しますか？" } %></p>
      </div>
    </div>
  <%= render "sidebar_right" %>
</div>