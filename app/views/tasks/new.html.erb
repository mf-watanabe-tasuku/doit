<% @title = "Todoを追加" %>

<div class="container">
  <div class="row">
    <div class="col-sm-2 col-lg-3"></div>
    <div class="col-sm-8 col-lg-6">
      <h2 class="mb-5 text-center"><%= @title %></h2>

      <%= form_with model: @task do |f| %>
        <%= render "form", f: f %>
        <div class="text-center">
          <%= f.submit "ToDoを追加", class: "btn btn-primary mt-4" %>
        </div>
      <% end %>
    </div>
    <div class="col-sm-2 col-lg-3"></div>
  </div>
</div>