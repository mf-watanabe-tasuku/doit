<script type="text/javascript">

    // チェックリストのステータス切り替え
    $(function() {
        $(".toggle-status").click(function() {
            $.post('/todos/'+$(this).data('id')+'/toggle_status');
            $("#todo-" + $(this).data('id')).toggleClass("todo__status--checked");
        })
    })

    // SPサイズでスライドメニューを表示
    $(function() {
        $("#hamburger").click(function() {
            $('body').addClass('menu-open');
        })
        $("#screen-layer").click(function() {
            $('body').removeClass('menu-open');
        })
    })
</script>