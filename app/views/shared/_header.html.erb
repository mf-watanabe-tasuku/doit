<header>
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <%= link_to index_path(@today), class:"navbar-brand" do %>
        <img src="/doit-logo-white.png" alt="DoITロゴ">
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if logged_in? %>
            <li class="nav-item">
              <%= gravatar_for current_user %>
              <%= link_to current_user.username, user_path(current_user), class:"nav-link" %>
            </li>
          <% end %>
          <li class="nav-item">
            <% if logged_in? %>
              <%= link_to "ログアウト", logout_path, method: :delete, class:"nav-link"  %>
            <% else %>
              <%= link_to "ログイン", login_path, class:"nav-link"  %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>