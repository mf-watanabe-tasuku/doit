<li class="list__item">
  <div id="todo-<%= todo.id %>" class="todo-status <%= "todo__status--checked" if todo.status %>">
    <%= check_box_tag "todo_status_#{todo.id}", true, todo.status, {'data-id' => todo.id, remote: true, method: :post, class: "toggle-status"} %>
    <%= label_tag "todo_status_#{todo.id}", "" %>
  </div>
  <div class="list__block list__block--left">
    <div class="list__title"><%= truncate(todo.title, length: 24, omission: "..." ) %></div>
  </div>
  <div class="list__block list__block--right list__block--grow">
    <div class="label label--margin">プログラミング</div>
    <div class="item-action">
      <%= link_to [ :edit, todo ], class: "item-action__btn" do %>
        <i class="fas fa-pencil-alt"></i>
      <% end %>
      <%= link_to todo, method: :delete, class: "item-action__btn", data: { confirm: "本当に削除しますか？" } do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  </div>
</li>