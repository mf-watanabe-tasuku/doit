<%= form_with(model: @todo) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group row">
    <%= f.label :title, class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :todo_date, class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= f.date_field(:todo_date, default: "#{@todo.todo_date}", value: "#{@todo.todo_date}", class: "form-control") %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :body, class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= f.text_area :body, rows: 8, class: "form-control" %>
    </div>
  </div>
  <div class="text-center">
    <%= f.submit "ToDoを追加", class: "btn btn-info mt-4" %>
  </div>
<% end %>