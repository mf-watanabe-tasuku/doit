<%= form_for(@todo) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group row">
    <label for="inputTitle" class="col-sm-4 col-form-label">タイトル</label>
    <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputBody" class="col-sm-4 col-form-label">メモ</label>
    <div class="col-sm-8">
      <%= f.text_area :body, size: 32, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <% if @todo.date_id
      @todo_date = Date.parse(@todo.date_id)
    else
      @todo_date = @today
    end %>
    <label for="inputDate" class="col-sm-4 col-form-label">日付</label>
    <div class="col-sm-8">
      <%= f.date_field(:date_id, default: "#{@todo_date}", value: "#{@todo_date}", class: "form-control") %>
    </div>
  </div>
  <div class="text-center">
    <%= f.submit "ToDoを追加", class: "btn btn-info mt-4" %>
  </div>
<% end %>