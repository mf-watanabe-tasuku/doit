<%= form_with(model: @todo, local: true) do |f| %>
  <div class="form-group row">
    <div class="col-sm-12">
      <%= f.label :title, class: "col-form-label" %>
      <%= f.text_field :title, class: "form-control" %>
      <%= error_message(@todo, :title) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12">
      <%= f.label :todo_date, class: "col-form-label" %>
      <%= f.date_field(:todo_date, default: @todo.todo_date, value: @todo.todo_date, class: "form-control") %>
      <%= error_message(@todo, :todo_date) %>
    </div>
  </div>
  <div class="text-center">
    <%= f.submit yield(:button_text), class: "" %>
  </div>
<% end %>