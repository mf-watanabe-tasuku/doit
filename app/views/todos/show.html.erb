<div class="container d-flex justify-content-between">
  <%= render "shared/sidebar_left" %>
    <div class="todo__main-col">
      <div class="page__title-box">
        <h2 class="page__title"><%= @todo.title %></h2>
      </div>
      <div class="form-group row">
        <label for="inputBody" class="col-sm-4 col-form-label">ステータス</label>
        <div class="col-sm-8">
          <div class="form-control-plaintext">
            <%= @todo.status %>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputBody" class="col-sm-4 col-form-label">日付</label>
        <div class="col-sm-8">
          <div class="form-control-plaintext">
            <%= format_todo_date(@todo.todo_date) %>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputBody" class="col-sm-4 col-form-label">メモ</label>
        <div class="col-sm-8">
          <div class="form-control-plaintext">
            <%= simple_format(h(@todo.body)) %>
          </div>
        </div>
      </div>
      <div class="todo__btn-case">
        <div>
          <%= link_to "戻る", index_path(@todo.todo_date), class: "btn btn-outline-info mr-3 btn-sm" %>
        </div>
        <div>
          <%= link_to "ショートカットに登録", todo_create_shortcut_path(@todo.id), method: :post, class: "btn btn-outline-success mr-3 btn-sm" %>
        </div>
        <div>
          <%= link_to "編集", [ :edit, @todo ], class: "btn btn-outline-warning mr-3 btn-sm" %>
        </div>
        <div>
          <%= link_to "削除", @todo, method: :delete, class: "btn btn-outline-danger btn-sm", data: { confirm: "本当に削除しますか？" } %>
        </div>
      </div>
    </div>
  <%= render "shared/sidebar_right" %>
</div>