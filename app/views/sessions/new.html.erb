<% @title = "ログイン" %>

<div class="container">
  <div class="login__case">
      <div class="page__title-box">
        <h2 class="page__title"><%= @title %></h2>
      </div>
      <div class="login__form">
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

          <div class="form-group row">
            <label for="inputTitle" class="col-sm-4 col-form-label">メールアドレス</label>
            <div class="col-sm-8">
              <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <label for="inputBody" class="col-sm-4 col-form-label">パスワード</label>
            <div class="col-sm-8">
              <%= f.password_field :password, class: "form-control" %>
            </div>
          </div>

          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %>
            <span>ログインしたままにする</span>
          <% end %>

          <div class="action__case">
            <%= f.submit "ログイン", class: "btn btn-primary action__btn" %>
            <p class="action__to-signup">初めての方は<%= link_to "新規登録", signup_path %></p>
          </div>
        <% end %>
      </div>
  </div>
</div>