<% 
@title = 'ログイン'
set_meta_tags title: @title
%>
<div class="container">
  <div class="login__case">
      <div class="page__title-box">
        <h2 class="page__title"><%= @title %></h2>
      </div>
      <div class="login__form">
        <%= form_with model: @form, url: login_path, html: { novalidate: true } do |f| %>
          <div class="form-group row">
            <div class="col-sm-4">
              <%= f.label :email, "メールアドレス", class: "col-form-label" %>
            </div>
            <div class="col-sm-8">
              <%= f.email_field :email, class: "form-control", value: @email %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-4">
              <%= f.label :password, "パスワード", class: "col-form-label" %>
            </div>
            <div class="col-sm-8">
              <%= f.password_field :password, class: "form-control" %>
              <%= link_to "パスワード再設定", new_password_reset_path, class:"d-block mt-1" %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-4"></div>
            <div class="col-sm-8">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "ログインしたままにする" %>
            </div>
          </div>
          <div class="action__case">
            <%= f.submit "ログイン", class: "btn btn-primary action__btn" %>
            <p class="action__to-signup">初めての方は<%= link_to "新規登録", signup_path %></p>
          </div>
        <% end %>
      </div>
  </div>
</div>